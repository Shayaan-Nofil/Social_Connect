<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_clean">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_page_clean"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/parrel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/img1"
                android:src="@drawable/social_connect"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true">
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_square_login">

            <TextView
                android:id="@+id/startedtext"
                android:text="Get Started!"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Name_text"
                android:text="Name"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/startedtext" />

            <EditText
                android:id="@+id/name_box"
                android:hint="Enter Name"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_rounded_rectangle"
                android:layout_below="@id/Name_text"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/email_text"
                android:text="Email"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_box" />

            <EditText
                android:id="@+id/email_box"
                android:hint="Enter Email"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_rounded_rectangle"
                android:layout_below="@id/email_text"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/contact_text"
                android:text="Contact Number"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_box" />

            <EditText
                android:id="@+id/contact_box"
                android:hint="Enter Number"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_rounded_rectangle"
                android:layout_below="@id/contact_text"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/country_text"
                android:text="Country"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_box" />

            <Spinner
                android:id="@+id/country_box"
                android:hint="Select Country"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:entries="@array/countries"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_rounded_rectangle"
                android:layout_below="@id/country_text"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/city_text"
                android:text="City"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/country_box" />

            <EditText
                android:id="@+id/city_box"
                android:hint="Select City"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_rounded_rectangle"
                android:layout_below="@id/city_text"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/password_text"
                android:text="Password"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_box" />

            <EditText
                android:id="@+id/password_box"
                android:hint="Enter your password"
                android:password="true"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_rounded_rectangle"
                android:layout_below="@id/password_text"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/password2_text"
                android:text="Password must be at least 8 characters long"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_box" />

            <Button
                android:id="@+id/signup_button"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#50c1c9"
                android:background="@drawable/white_rounded_rectangle"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_below="@id/password_box"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/haveaccount"
                    android:text="Alread have an account?"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/login"
                    android:clickable="true"
                    android:text="@string/login"
                    android:textStyle="bold"
                    android:textColor="#368389"
                    android:textSize="13sp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>