<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ddf7f6"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/parrel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="#50c1c9">
                <Button
                    android:background="@drawable/back_arrow"
                    android:id="@+id/back_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="70dp"/>

                <TextView
                    android:id="@+id/notif_text"
                    android:text="Edit Profile"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/Name_text"
                    android:text="Name"
                    android:textSize="15dp"
                    android:textColor="#156f77"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/name_box"
                    android:hint="Enter Name"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/white_rounded_rectangle"
                    android:layout_below="@id/Name_text"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/email_text"
                    android:text="Email"
                    android:textSize="15dp"
                    android:textColor="#156f77"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_box" />

                <EditText
                    android:id="@+id/email_box"
                    android:hint="Enter Email"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/white_rounded_rectangle"
                    android:layout_below="@id/email_text"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/contact_text"
                    android:text="Contact Number"
                    android:textSize="15dp"
                    android:textColor="#156f77"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_box" />

                <EditText
                    android:id="@+id/contact_box"
                    android:hint="Enter Number"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/white_rounded_rectangle"
                    android:layout_below="@id/contact_text"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/country_text"
                    android:text="Country"
                    android:textSize="15dp"
                    android:textColor="#156f77"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact_box" />

                <Spinner
                    android:id="@+id/country_box"
                    android:entries="@array/countries"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/white_rounded_rectangle"
                    android:layout_below="@id/country_text"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/city_text"
                    android:text="City"
                    android:textSize="15dp"
                    android:textColor="#156f77"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_box" />

                <EditText
                    android:id="@+id/city_box"
                    android:hint="Select City"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/white_rounded_rectangle"
                    android:layout_below="@id/city_text"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/update_button"
                    android:text="Update Profile"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:background="@drawable/green_rounded_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

            </RelativeLayout>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:clickable="true"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="190dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ali_circle"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>