<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/john_book_button"
android:clickable="true"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginVertical="10dp"
android:orientation="horizontal">

<RelativeLayout
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_marginLeft="40dp"
    android:background="@drawable/lightgray_rounded_box">

    <ImageView
        android:id="@+id/mentor_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/john1"/>

</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignBottom="@id/mentor_img"
    android:layout_marginBottom="15dp"
    android:layout_marginHorizontal="30dp"
    android:background="@drawable/white_rounded_box"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="John Cooper"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>

</LinearLayout>