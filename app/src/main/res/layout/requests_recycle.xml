<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    android:clickable="true">

<ImageView
    android:id="@+id/mentor_img"
    android:layout_marginLeft="20dp"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/john1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/white_rounded_box"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/accept_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Accept"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="9dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/blue_rounded_box"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/reject_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Reject"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="9dp"
            android:layout_toLeftOf="@id/accept_button"
            android:background="@drawable/red_box"
            android:layout_marginEnd="5dp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="7dp"
                    android:text="John Cooper"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/friendtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="Sent you a friend request"
                    android:textColor="@color/black"
                    android:textSize="7sp"
                    android:textAlignment="gravity" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>